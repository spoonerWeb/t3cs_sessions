<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <ROOT>
        <type>array</type>
        <el>
            <switchableControllerActions>
                <TCEforms>
                    <label>Funktionalität</label>
                    <config>
                        <type>select</type>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">Sessionplan</numIndex>
                                <numIndex index="1">Session->list</numIndex>
                            </numIndex>
                            <numIndex index="1" type="array">
                                <numIndex index="0">Vergangener Sessionplan</numIndex>
                                <numIndex index="1">Session->listPast</numIndex>
                            </numIndex>
                        </items>
                        <maxitems>1</maxitems>
                        <size>1</size>
                    </config>
                </TCEforms>
            </switchableControllerActions>
            <settings.showOnlySessions>
                <TCEforms>
                    <label>Zeige nur Sessions (ohne Pausen/Rahmenprogramm)</label>
                    <config>
                        <type>check</type>
                    </config>
                </TCEforms>
            </settings.showOnlySessions>
            <settings.pages>
                <TCEforms>
                    <label>Seite(n) mit Datensätzen</label>
                    <config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>pages</allowed>
                        <size>5</size>
                        <maxitems>99</maxitems>
                        <minitems>1</minitems>
                        <autoSizeMax>10</autoSizeMax>
                    </config>
                </TCEforms>
            </settings.pages>
        </el>
    </ROOT>
</T3DataStructure>
